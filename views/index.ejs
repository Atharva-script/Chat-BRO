<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatBRO - Your Intelligent Conversation Partner</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="icon" href="/images/favicon.ico" sizes="any">
    <link rel="icon" type="image/png" href="/images/logo.png">
    <link rel="apple-touch-icon" href="/images/logo.png">
</head>
<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <div class="header-content">
                <div class="logo">
                    <img src="/images/logo.png" alt="ChatBRO logo" class="logo-image"> ChatBRO
                </div>
                <nav aria-label="Main navigation">
                    <ul class="nav-menu" id="mainNavMenu">
                        <li><a href="/" class="active">Home</a></li>
                        <li><a href="/chat">Chat</a></li>
                        <li><a href="/settings">Settings</a></li>
                    </ul>
                </nav>
                <button class="mobile-menu-toggle" aria-label="Open navigation menu" aria-controls="mainNavMenu" aria-expanded="false" onclick="toggleMobileMenu(this)">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="main">
        <div class="container">
            <!-- Hero Section -->
            <section class="hero">
                <h1>Your AI Conversation Partner</h1>
                <p>Experience the future of communication with ChatBRO. Connect with multiple AI models including OpenAI, Anthropic, Google Gemini, and Cohere for intelligent, contextual conversations.</p>
                <div class="hero-buttons">
                    <a href="/chat" class="btn btn-primary">
                        <i class="fas fa-comments"></i>
                        Start Chatting
                    </a>
                    <a href="/settings" class="btn btn-secondary">
                        <i class="fas fa-cog"></i>
                        Configure API Keys
                    </a>
                </div>
            </section>

            <!-- AI Models Grid -->
            <section class="models-grid">
                <div class="model-card">
                    <div class="model-icon">
                        <i class="fab fa-openai"></i>
                    </div>
                    <h3>OpenAI GPT</h3>
                    <p>Powered by GPT-3.5 Turbo</p>
                    <span class="model-status <%= apiKeys.openai ? 'configured' : 'not-configured' %>">
                        <%= apiKeys.openai ? '✓ Configured' : '⚠ Not Configured' %>
                    </span>
                </div>

                <div class="model-card">
                    <div class="model-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h3>Anthropic Claude</h3>
                    <p>Powered by Claude 3 Haiku</p>
                    <span class="model-status <%= apiKeys.anthropic ? 'configured' : 'not-configured' %>">
                        <%= apiKeys.anthropic ? '✓ Configured' : '⚠ Not Configured' %>
                    </span>
                </div>

                <div class="model-card">
                    <div class="model-icon">
                        <i class="fas fa-google"></i>
                    </div>
                    <h3>Google Gemini</h3>
                    <p>Powered by Gemini 1.5 Flash</p>
                    <span class="model-status <%= apiKeys.google ? 'configured' : 'not-configured' %>">
                        <%= apiKeys.google ? '✓ Configured' : '⚠ Not Configured' %>
                    </span>
                </div>

                <div class="model-card">
                    <div class="model-icon">
                        <i class="fas fa-microchip"></i>
                    </div>
                    <h3>Cohere</h3>
                    <p>Powered by Command Model</p>
                    <span class="model-status <%= apiKeys.cohere ? 'configured' : 'not-configured' %>">
                        <%= apiKeys.cohere ? '✓ Configured' : '⚠ Not Configured' %>
                    </span>
                </div>
            </section>

            <!-- Features Section -->
            <section class="features">
                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3>Secure & Private</h3>
                    <p>Your conversations and API keys are stored locally and never shared with third parties.</p>
                </div>

                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <h3>Lightning Fast</h3>
                    <p>Real-time responses with minimal latency for seamless conversation flow.</p>
                </div>

                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-mobile-alt"></i>
                    </div>
                    <h3>Responsive Design</h3>
                    <p>Optimized for all devices - desktop, tablet, and mobile for on-the-go conversations.</p>
                </div>

                <div class="feature">
                    <div class="feature-icon">
                        <i class="fas fa-history"></i>
                    </div>
                    <h3>Chat History</h3>
                    <p>Save and export your conversations for future reference and analysis.</p>
                </div>
            </section>

            <!-- CTA Section -->
            <section class="cta-section">
                <div class="cta-content">
                    <h2>Ready to Start Your AI Journey?</h2>
                    <p>Join thousands of users who are already experiencing the future of AI-powered conversations.</p>
                    <div class="cta-buttons">
                        <a href="/chat" class="btn btn-primary btn-large">
                            <i class="fas fa-rocket"></i>
                            Launch Chat
                        </a>
                        <a href="/settings" class="btn btn-secondary btn-large">
                            <i class="fas fa-key"></i>
                            Get Started
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 ChatBRO. Built with Express, EJS, and modern web technologies.</p>
        </div>
    </footer>

    <script>
        // Mobile menu toggle
        function toggleMobileMenu(btn) {
            const nav = document.getElementById('mainNavMenu');
            nav.classList.toggle('mobile-open');
            if (btn) {
                const expanded = nav.classList.contains('mobile-open');
                btn.setAttribute('aria-expanded', expanded);
            }
        }

        // Add reveal animations
        function revealOnScroll() {
            const elements = document.querySelectorAll('.model-card, .feature');
            elements.forEach(element => {
                const elementTop = element.getBoundingClientRect().top;
                const elementVisible = 150;
                
                if (elementTop < window.innerHeight - elementVisible) {
                    element.classList.add('show');
                }
            });
        }

        // Add ripple effect to buttons
        function addRippleEffect(event) {
            const button = event.currentTarget;
            const ripple = document.createElement('span');
            const rect = button.getBoundingClientRect();
            const size = Math.max(rect.width, rect.height);
            const x = event.clientX - rect.left - size / 2;
            const y = event.clientY - rect.top - size / 2;
            
            ripple.style.width = ripple.style.height = size + 'px';
            ripple.style.left = x + 'px';
            ripple.style.top = y + 'px';
            ripple.classList.add('ripple');
            
            button.appendChild(ripple);
            
            setTimeout(() => {
                ripple.remove();
            }, 600);
        }

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Add ripple effect to all buttons
            const buttons = document.querySelectorAll('.btn');
            buttons.forEach(button => {
                button.addEventListener('click', addRippleEffect);
            });

            // Initial reveal check
            revealOnScroll();
            
            // Reveal on scroll
            window.addEventListener('scroll', revealOnScroll);
        });
    </script>
</body>
</html>
